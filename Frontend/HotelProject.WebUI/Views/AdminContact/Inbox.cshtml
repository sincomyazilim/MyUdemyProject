@model List<ResultInboxContactDto>
@{
    ViewData["Title"] = "Inbox";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}




<div class="card">
    <div class="card-body">
        <div class="email-left-box">
            <a href="/AdminSendMessage/AddSendMessage/" class="btn btn-primary btn-block">Yeni Mesaj Oluştur</a>
            @*@await Html.PartialAsync("SideBarAdminContactPartial")*@
            @await Component.InvokeAsync("_SideBarAdminContactPartial")
            <h5 class="mt-5 m-b-10">Kategoriler</h5>
            @await Html.PartialAsync("SideBarAdminContactCategoryPartial")
        </div>
        <div class="email-right-box">
            <div role="toolbar" class="toolbar">
                <div class="btn-group">
                    <button aria-expanded="false" @*data-toggle="dropdown"*@ class="btn btn-dark @*dropdown-toggle*@" type="button">
                        Gelen Mesajlar <span class="caret m-l-5"></span>
                    </button>

                </div>
            </div>
            <br/>
            <div class="email-list m-t-15">
                @foreach (var item in Model)
                {
                    <div class="message">
                        <a href="/AdminContact/GetSendMessageDetails/@item.Id">
                            <div class="col-mail col-mail-1">
                                <div class="email-checkbox">
                                    <input type="checkbox" id="chk2">
                                    <label class="toggle" for="chk2"></label>
                                </div><span class="star-toggle ti-star"></span>
                            </div>
                            <div class="col-mail col-mail-2">
                                <div class="subject"><b>Kimden : @item.Name </b>Title  :  @item.Subject Konu:@item.CategoryContactMessage.CategoryContactMessageName</div>
                                @*@if (item.Message.Length > 50)
                                {
                                    <div class="subject">@item.Message.Substring(0, 50)</div>
                                }
                                else
                                {
                                    <div class="subject">@item.Message</div>
                                }*@



                                <div class="date">@item.Date</div>
                            </div>
                        </a>
                    </div>
                }


            </div>
        </div>
    </div>
</div>



