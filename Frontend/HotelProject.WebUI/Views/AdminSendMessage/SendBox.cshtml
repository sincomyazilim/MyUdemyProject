@model List<ResultAdminSendBoxDto>
@{
    ViewData["Title"] = "SendBox";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}


<div class="card">
    <div class="card-body">
        <div class="email-left-box">
            <a href="/AdminSendMessage/AddSendMessage/" class="btn btn-primary btn-block">Yeni Mesaj Oluştur</a>
            @*@await Html.PartialAsync("~/Views/AdminContact/SideBarAdminContactPartial.cshtml")*@
            @await Component.InvokeAsync("_SideBarAdminContactPartial")
            <h5 class="mt-5 m-b-10">Kategoriler</h5>
            @await Html.PartialAsync("~/Views/AdminContact/SideBarAdminContactCategoryPartial.cshtml")
        </div>
        <div class="email-right-box">
            <div role="toolbar" class="toolbar">
                <div class="btn-group">
                    <button aria-expanded="false" @*data-toggle="dropdown"*@ class="btn btn-dark @*dropdown-toggle*@" type="button">
                        Gönderilen Mesajlar <span class="caret m-l-5"></span>
                    </button>

                </div>
            </div>
            <br/>
            <div class="email-list m-t-15">
                @foreach (var item in Model)
                {
                    <div class="message">
                        <a href="/AdminSendMessage/SendSendMessageDetails/@item.SendMessageId">
                            <div class="col-mail col-mail-1">
                                <div class="email-checkbox">
                                    <input type="checkbox" id="chk2">
                                    <label class="toggle" for="chk2"></label>
                                </div><span class="star-toggle ti-star"></span>
                            </div>
                            <div class="col-mail col-mail-2">
                                <div class="subject"><b>Konu : @item.Title </b> Alıcı :  @item.ReceiverName</div>
                                @*@if (item.Content.Length > 30)
                                {
                                    <div class="subject">@item.Content.Substring(0, 30)</div>
                                }
                                else
                                {
                                    <div class="subject">@item.Content</div>
                                }*@



                                <div class="date">@(((DateTime)item.Date).ToString("dd-MM-yyyy"))</div>
                            </div>
                        </a>
                    </div>
                }


            </div>
        </div>
    </div>
</div>