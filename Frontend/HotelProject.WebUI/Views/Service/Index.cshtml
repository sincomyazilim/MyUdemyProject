@model List<ResultServiceDto>
@{
        ViewData["Title"] = "Index";
        Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    }

<table class="table tabcontent-border">
    <tr>
        <th>#</th>
        <th>Hizmet Adı</th>
        <th>Hizmet Başlığı</th>
        <th>sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.ServiceId</th>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td><a href="/Service/DeleteService/@item.ServiceId" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Service/UpdateService/@item.ServiceId" class="btn btn-outline-primary">Güncelle</a></td>
            <td><a href="#" class="btn btn-outline-info">Detaylar</a></td>
        </tr>
    }
</table>

<a href="/Service/AddService/" class="btn btn-outline-success">Yeni Hizmet Ekle</a>

